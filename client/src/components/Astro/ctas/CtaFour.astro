<section class="lg:p-8">
  <div
    class="px-8 py-12 lg:py-32 mx-auto md:px-12 lg:px-16 xl:px-36 2xl:max-w-7xl">
    <div
      class="relative isolate bg-gradientdown ring-1 ring-white/10 rounded-4xl px-6 py-8 sm:px-16 xl:flex lg:gap-x-12 lg:px-24 lg:pt-0">
      <div
        class="mx-auto max-w-md text-center xl:mx-0 lg:flex-auto lg:py-32 xl:text-left">
        <span class="text-white"> Get started</span>
        <h2
          class="text-3xl mt-6 tracking-tight font-light lg:text-4xl text-white">
          Eager to become a partner?
        </h2>
        <p class="mt-4 text-base text-white">
          Sign up here. Our team will promptly get in touch with you, providing
          an enablement pack tailored to your specific requirements.
        </p>
        <div class="inline-flex flex-wrap items-center mt-8">
          <a
            href="/contact"
            class="text-sm py-2 px-4 border focus:ring-2 rounded-full border-transparent bg-white hover:bg-white/10 text-black duration-200 focus:ring-offset-2 focus:ring-white hover:text-white inline-flex items-center justify-center ring-1 ring-transparent">
            Contact sales
          </a>
        </div>
      </div>
      <div class="mt-16 lg:-mt-24 bg-white rounded-3xl flex flex-col justify-center h-full w-full mx-auto">
        <form class="bg-white rounded-3xl p-8 overflow-hidden">
          <div class="space-y-6">
            <div class="w-full flex flex-row gap-3">
              <div class="w-full">
                <label
                  for="first_name"
                  class="block mb-3 text-sm font-medium text-black"
                  >First name</label
                >
                <input
                  type="text"
                  id="first_name"
                  name="first_name"
                  placeholder="First name..."
                  autocomplete="given-name"
                  required
                  class="block w-full px-3 py-3 border-2 border-zinc-100 rounded-xl appearance-none text-black placeholder-black/50 bg-white/5 focus:border-black focus:bg-transparent focus:outline-none focus:ring-black sm:text-sm placeholder-zinc-500 h-10"
                />
              </div>
              <div class="w-full">
                <label
                  for="last_name"
                  class="block mb-3 text-sm font-medium text-black"
                  >Last name</label
                >
                <input
                  type="text"
                  id="last_name"
                  name="last_name"
                  placeholder="Last name..."
                  autocomplete="family-name"
                  required
                  class="block w-full px-3 py-3 border-2 border-zinc-100 rounded-xl appearance-none text-black placeholder-black/50 bg-white/5 focus:border-black focus:bg-transparent focus:outline-none focus:ring-black sm:text-sm placeholder-zinc-500 h-10"
                />
              </div>
            </div>
            <div>
              <label
                for="company"
                class="text-sm block font-medium mb-3 text-black"
                >Company</label
              >
              <input
                type="text"
                id="company"
                name="company"
                placeholder="Your Company..."
                class="block w-full px-3 py-3 border-2 border-zinc-100 rounded-xl appearance-none text-black placeholder-black/50 bg-white/5 focus:border-black focus:bg-transparent focus:outline-none focus:ring-black sm:text-sm placeholder-zinc-500 h-10"
              />
            </div>
            <div class="col-span-full">
              <label
                for="email"
                class="text-sm block font-medium mb-3 text-black"
                >Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                placeholder="Your Email..."
                class="block w-full px-3 py-3 border-2 border-zinc-100 rounded-xl appearance-none text-black placeholder-black/50 bg-white/5 focus:border-black focus:bg-transparent focus:outline-none focus:ring-black sm:text-sm placeholder-zinc-500 h-10"
              />
            </div>
            <div class="col-span-full">
              <label
                for="phone-number"
                class="text-sm block font-medium mb-3 text-black"
                >Phone Number</label
              >
              <div class="relative">
                <select
                  id="country"
                  name="country"
                  class="absolute inset-y-0 left-0 text-sm bg-transparent border-transparent focus:border-blue-500 focus:ring-blue-500 h-full pl-3 pr-8 py-0 rounded-md text-black">
                  <option>US</option>
                  <option>CA</option>
                  <option>EU</option>
                </select>
                <input
                  type="text"
                  id="phone-number"
                  name="phone-number"
                  placeholder="+1 (555) 987-6543"
                  autocomplete="tel"
                  class="text-sm block w-full px-20 py-3 border-2 border-zinc-100 rounded-xl appearance-none text-black placeholder-black/50 bg-white/5 focus:border-black focus:bg-transparent focus:outline-none focus:ring-black sm:text-sm placeholder-zinc-500 h-10"
                />
              </div>
            </div>
            <div class="flex">
              <div class="flex items-start">
                <input
                  type="checkbox"
                  id="terms"
                  name="terms"
                  class="border-blue-500 focus:ring-blue-500 h-4 rounded text-blue-400 w-4"
                />
                <label
                  for="terms"
                  class="text-sm block font-medium leading-tight ml-2 text-black"
                  >I agree to the <a
                    href="/terms"
                    class="hover:text-blue-400 text-blue-400"
                    >Terms of Service</a
                  > and <a
                    href="/privacy"
                    class="hover:text-blue-400 text-blue-400"
                    >Privacy Policy</a
                  >.</label
                >
              </div>
            </div>
            <div class="col-span-full">
              <button
                type="submit"
                class="text-sm py-2 px-4 border focus:ring-2 h-10 rounded-full border-zinc-100 bg-black hover:bg-black/10 text-white duration-200 focus:ring-offset-2 focus:ring-white hover:text-black w-full inline-flex items-center justify-center ring-1 ring-transparent"
                >Submit</button
              >
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
