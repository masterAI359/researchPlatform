---
const helpCenterContent = [
  {
    title: "Help Center ",
    description:
      "Find solutions to commonly asked questions, browse instructional materials, and explore resources for resolving issues.",
    linkText: "Search your topic",
    linkHref: "/helpcenter/home",
  },
  {
    title: "Your Support Tickets",
    description:
      "Monitor the progress of all the support tickets you have submitted.",
    linkText: "View all tickets",
    linkHref: "/helpcenter/status",
  },
  {
    title: "Contact Support",
    description:
      "Reach out to us directly to receive answers tailored to your specific inquiries.",
    linkText: "Learn more",
    linkHref: "/forms/contact",
  },
];
---

<section class="lg:p-8">
  <div
    class="px-8 py-12 lg:py-24 mx-auto md:px-12 lg:px-16 xl:px-36 2xl:max-w-7xl">
    <div
      class="relative isolate lg:flex-col overflow-hidden bg-gradientdown ring-1 ring-white/10 rounded-4xl px-6 p-10 lg:flex lg:p-20">
      <div>
        <span class="text-white"> Knowledge Base</span>
        <h2
          class="text-3xl mt-6 tracking-tight font-light lg:text-4xl text-white">
          Get answers <span class="md:block text-zinc-400">
            to your questions.</span
          >
        </h2>
      </div>
      <ul class="grid grid-cols-1 gap-2 sm:grid-cols-2 lg:grid-cols-3 mt-12">
        {
          helpCenterContent.map((item) => (
            <li class="bg-ebony shadow-inset rounded-3xl p-4">
              <figure class="flex flex-col justify-between h-full">
                <div>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="icon icon-tabler icon-tabler-circle-check text-white"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round">
                    <path
                      stroke="none"
                      d="M0 0h24v24H0z"
                      fill="none"
                    />
                    <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
                    <path d="M9 12l2 2l4 -4" />
                  </svg>
                  <p class="font-medium leading-6 text-white mt-24">
                    {item.title}
                  </p>
                  <p class="text-xs mt-2 text-zinc-300">{item.description}</p>
                </div>
                <div class="mt-6">
                  <a
                    href={item.linkHref}
                    class="text-sm hover:text-blue-200 text-white text-pretty">
                    {item.linkText} <span aria-hidden="true">â†’</span>
                  </a>
                </div>
              </figure>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
