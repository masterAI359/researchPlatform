---
const pricingPlans = [
  {
    title: "Hobby",
    price: "$0/month",
    description: "Super for hobbist",
    benefits: ["Create 10 charts", "10 Api connections", "1 user"],
    isPopular: false,
  },
  {
    title: "Almost pro",
    price: "$1,999/month",
    description: "50% off for the 3 first clients!",
    benefits: [
      "Create 10 charts",
      "Connect up to two websites",
      "Email marketing",
      "10 Api connections",
      "1 user",
    ],
    isPopular: true,
  },
  {
    title: "Super pro",
    price: "Custom pricing",
    description: "Super for hobbist",
    benefits: [
      "Create 100 charts",
      "Unlimited websites",
      "Email marketing",
      "100 Api connections",
      "Unlimited user",
    ],
    isPopular: false,
  },
  {
    title: "Enterprise",
    price: "Contact us",
    description: "Perfect for large businesses",
    benefits: [
      "Create unlimited charts",
      "Unlimited websites",
      "Priority email marketing",
      "Unlimited API connections",
      "Unlimited users",
      "Dedicated support",
    ],
    buttonText: "Contact us",
    isPopular: false,
  },
];
---

<section class="lg:p-8">
  <div
    class="mx-auto 2xl:max-w-7xl py-24 lg:px-16 md:px-12 px-8 xl:px-36 items-center lg:py-24 relative w-full">
    <div class="text-center max-w-xl mx-auto">
      <span class="text-blue-400"> Pricing</span>
      <h2
        class="text-3xl mt-6 tracking-tight font-light lg:text-4xl text-white">
        Super Simple pricing <span class="block text-zinc-400"
          >for practically everyrone</span
        >
      </h2>
    </div>
    <div
      class="mt-12 space-y-4 sm:mt-16 sm:space-y-0 sm:grid sm:grid-cols-2 sm:gap-2 xl:grid-cols-4 bg-gradientdown ring-1 ring-white/10 rounded-3xl p-2 lg:-mx-24">
      {
        pricingPlans.map((plan) => (
          <section
            class={`flex flex-col px-6 py-8  lg:order-none ${plan.isPopular ? "bg-ebony  shadow-inset rounded-3xl order-first" : ""}`}>
            <div class="h-full">
              <div class="gap-12 w-full">
                <div>
                  <h3
                    class={`text-lg ${plan.isPopular ? "text-blue-400" : "text-white"}`}>
                    {plan.title}
                    {plan.isPopular && (
                      <span class="font-medium inline-flex items-center bg-ebony border border-white/10 ml-4 px-3 py-0.5 rounded-full text-white text-xs">
                        Popular
                      </span>
                    )}
                  </h3>
                  <p class="mt-4 text-2xl font-light text-white">
                    {plan.price}
                    <span class="text-sm text-zinc-400">/month</span>
                  </p>
                  <p class="mt-3 text-sm text-white">{plan.description}</p>
                </div>
              </div>
              <div class="inline-flex flex-wrap items-center mt-8 w-full">
                <button
                  type="button"
                  class="text-sm py-2 w-full px-4 border focus:ring-2 rounded-full border-transparent bg-white hover:bg-white/10 text-black duration-200 focus:ring-offset-2 focus:ring-white hover:text-white inline-flex items-center justify-center ring-1 ring-transparent">
                  Get started
                </button>
              </div>
              <ul
                role="list"
                class={`flex flex-col order-last text-sm mt-10 ${plan.isPopular ? "text-white" : "text-zinc-400"} divide-y divide-white/10`}>
                {plan.benefits.map((benefit) => (
                  <li class="inline-flex items-center py-3">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="icon icon-tabler icon-tabler-check"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round">
                      <path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      />
                      <path d="M5 12l5 5l10 -10" />
                    </svg>
                    <span class="ml-4">{benefit}</span>
                  </li>
                ))}
              </ul>
            </div>
          </section>
        ))
      }
    
    </div>
  </div>
</section>
