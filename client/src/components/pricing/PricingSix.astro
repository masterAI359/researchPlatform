---
// Define your pricing plans array
const standardPlans = [
  {
    id: 1,
    name: "Starter",
    price: "$15",
    description: "Safely fetch, process, and share your data.",
    priceSuffix: "/mo",
  },
  {
    id: 2,
    name: "Mega Pro",
    price: "$35",
    description: "Safely fetch, process, and share your data.",
    priceSuffix: "/mo",
  },
];

const teamPlan = {
  id: 1,
  name: "Teams",
  price: "$5.000",
  description: "For teams up to 20 seats",
  priceSuffix: "/mo",
};
---

<section class="lg:p-8">
  <div
    class="mx-auto 2xl:max-w-7xl py-24 lg:px-16 md:px-12 px-8 xl:px-36 items-center lg:py-24 relative w-full bg-gradientdown rounded-[3rem]">
    <div class="text-center max-w-xl mx-auto">
      <span class="text-blue-400"> Pricing</span>
      <h2
        class="text-3xl mt-6 tracking-tight font-light lg:text-4xl text-white">
        Super Simple pricing <span class="block text-zinc-400"
          >for practically everyrone</span
        >
      </h2>
    </div>
    <div class="max-w-xl mx-auto">
      <div
        class="grid grid-cols-1 text-center md:grid-cols-2 md:divide-x divide-white/10 mt-12 rounded-3xl bg-ebony/50 shadow-inset">
        {
          standardPlans.map((plan) => (
            <div key={plan.id}>
              <div class="p-12 mx-auto">
                <p>
                  <span class="text-lg text-white"> {plan.name}</span>
                </p>
                <p class="mt-4">
                  <span class="text-2xl font-lighter text-white">
                    {plan.price}
                  </span>
                  <span class="text-base font-medium text-zinc-400">
                    {plan.priceSuffix}
                  </span>
                </p>
                <p class="mx-auto mt-6 text-sm text-white">
                  {plan.description}
                </p>
                <div class="inline-flex flex-wrap items-center mt-8 w-full">
                  <button
                    type="button"
                    class="text-sm py-2 w-full px-4 border focus:ring-2 rounded-full border-transparent bg-white hover:bg-white/10 text-black duration-200 focus:ring-offset-2 focus:ring-white hover:text-white inline-flex items-center justify-center ring-1 ring-transparent">
                    Get started
                  </button>
                </div>
              </div>
            </div>
          ))
        }
      </div>
      <div
        class="flex flex-col items-start gap-x-8 gap-y-6 rounded-3xl p-8 sm:gap-y-10 sm:p-10 lg:col-span-2 lg:flex-row lg:items-center bg-ebony/80 mt-2 shadow-inset text-center">
        <div class="lg:min-w-0 lg:flex-1 max-w-sm mx-auto">
          <p><span class="text-lg text-white"> {teamPlan.name}</span></p>
          <p class="mt-4">
            <span class="text-2xl font-lighter text-white"
              >{teamPlan.price}</span
            >
            <span class="text-base font-medium text-zinc-400"
              >{teamPlan.priceSuffix}</span
            >
          </p>
          <p class="mx-auto mt-6 text-sm text-white">{teamPlan.description}</p>
          <div class="inline-flex flex-wrap items-center mt-8 w-full">
            <button
              type="button"
              class="text-sm py-2 w-full px-4 border focus:ring-2 rounded-full border-transparent bg-white hover:bg-white/10 text-black duration-200 focus:ring-offset-2 focus:ring-white hover:text-white inline-flex items-center justify-center ring-1 ring-transparent">
              Get started
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
