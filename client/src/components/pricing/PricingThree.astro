---
// Define the pricing plans
const pricingPlans = [
  {
    title: "Hobby",
    price: "$999/month",
    description: "Super for hobbist",

    isPopular: false,
  },
  {
    title: "Almost pro",
    price: "$1,999/month",
    description: "50% off for the 3 first clients!",

    isPopular: true,
  },
];
---

<section class="lg:p-8">
  <div
    class="mx-auto 2xl:max-w-7xl py-24 lg:px-16 md:px-12 px-8 xl:px-36 items-center lg:py-24 relative w-full">
    <div>
      <div
        class="grid grid-cols-1 lg:grid-cols-2 pb-6 gap-12 border-b border-white/10 items-end">
        <div>
          <span class="text-white"> Pricing</span>
          <h2
            class="text-3xl mt-6 tracking-tight font-light lg:text-4xl text-white">
            Super Simple pricing <span class="block text-zinc-400"
              >for practically everyrone</span
            >
          </h2>
        </div>
      </div>
      <div class="pt-6">
        <div
          class="space-y-4 sm:space-y-0 text-left sm:grid sm:grid-cols-2 sm:gap-6 lg:max-w-4xl lg:mx-auto xl:max-w-none xl:grid-cols-2 ring-1 ring-white/10 rounded-3xl p-2">
          {
            pricingPlans.map((plan) => (
              <section
                class={`flex flex-col px-6 py-8  lg:order-none ${plan.isPopular ? "bg-gradientdown bg-ebony shadow-inset rounded-3xl order-first" : ""}`}>
                <div class="h-full">
                  <div class="gap-12 w-full">
                    <div>
                      <div class="flex justify-between items-center">
                        <h3
                          class={`text-lg ${plan.isPopular ? "text-blue-400" : "text-white"}`}>
                          {plan.title}
                          {plan.isPopular && (
                            <span class="font-medium inline-flex items-center bg-ebony border border-white/10 ml-4 px-3 py-0.5 rounded-full text-white text-xs">
                              Popular
                            </span>
                          )}
                        </h3>
                        <p class="mt-4 text-2xl font-light text-white">
                          {plan.price}
                        </p>
                      </div>

                      <p class="mt-3 text-sm text-white">{plan.description}</p>
                    </div>
                  </div>
                  <div class=" mt-8 w-full">
                    <button
                      type="button"
                      class="text-sm py-2 w-full px-4 border focus:ring-2 rounded-full border-transparent bg-white hover:bg-white/10 text-black duration-200 focus:ring-offset-2 focus:ring-white hover:text-white inline-flex items-center justify-center ring-1 ring-transparent">
                      Get started
                    </button>
                  </div>
                </div>
              </section>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
