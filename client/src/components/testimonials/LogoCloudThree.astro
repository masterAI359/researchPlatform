---
const logos = [
  { src: "/images/logos/notion.svg", alt: "Notion Logo" },
  { src: "/images/logos/github.svg", alt: "GitHub Logo" },
  { src: "/images/logos/dribbble.svg", alt: "Dribbble Logo" },
  { src: "/images/logos/adobe.svg", alt: "Adobe Logo" },
  { src: "/images/logos/basecamp.svg", alt: "Basecamp Logo" },
  { src: "/images/logos/spotify.svg", alt: "Spotify Logo" },
  { src: "/images/logos/spacex.svg", alt: "SpaceX Logo" },
  { src: "/images/logos/airbnb.svg", alt: "Airbnb Logo" },
  { src: "/images/logos/twich.svg", alt: "Twitch Logo" },
  { src: "/images/logos/zoom.svg", alt: "Zoom Logo" },

];
---

<section>
  <div class="md:px-12 lg:px-16 xl:px-36 max-w-7xl px-8 py-12 mx-auto">
    <div class="flow-root py-24 border-y border-white/10">
      <div class="-ml-8 grid grid-cols-5 lg:-ml-4 gap-6">
        {
          logos.map((logo) => (
            <div class="mt-4 ml-8 flex flex-shrink-0 flex-grow lg:ml-4 lg:flex-grow-0">
              <img
                src={logo.src}
                alt={logo.alt}
              />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
