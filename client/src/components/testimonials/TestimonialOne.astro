---

<section class="lg:p-8">
  <div
    class="mx-auto 2xl:max-w-7xl py-12 lg:px-16 md:px-12 px-8 xl:px-36 items-center relative w-full">
    <div class="max-w-xl mx-auto text-center">
      <span class="text-blue-400"> Opinions</span>
      <h2
        class="text-3xl mt-6 tracking-tight font-light lg:text-4xl text-white">
        Meet our customers
      </h2>
    </div>
    <ul
      role="list"
      class="grid grid-cols-1 gap-2 lg:grid-cols-4 lg:space-y-0 mt-12">
      {
        testimonials.map((testimonial) => (
          <li class="bg-ebony shadow-inset rounded-3xl lg:p-8 p-4 text-center">
            <figure>
              <div class="h-full group grid">
                <figcaption class="relative flex items-center flex-col gap-4 pb-6">
                  <div class="overflow-hidden shrink-0">
                    <img
                      alt={testimonial.alt}
                      src={testimonial.img}
                      class="object-cover rounded-full size-14 grayscale shrink-0"
                    />
                  </div>
                  <div>
                    <div class="text-lg font-medium leading-6 text-white">
                      {testimonial.name}
                    </div>
                    <div class="mt-1">
                      <a
                        class="text-sm text-white/70 group-hover:text-white"
                        href="#_">
                        {testimonial.title}
                      </a>
                    </div>
                  </div>
                </figcaption>
                <blockquote class="relative mt-2 ">
                  <p class="text-sm text-white">"{testimonial.content}"</p>
                </blockquote>
              </div>
            </figure>
          </li>
        ))
      }
    </ul>
  </div>
</section>
