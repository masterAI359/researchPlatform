---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
import CtaOne from "@/components/ctas/CtaOne.astro";
---

<BaseLayout>
  <section class="lg:p-8 bg-black">
    <div
      class="px-8 py-12 lg:py-24 mx-auto md:px-12 lg:px-16 xl:px-36 2xl:max-w-7xl">
      <div
        class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:gap-24 items-center">
        <div>
          <span class="text-blue-400"> {frontmatter.customer}</span>
          <h2
            class="text-3xl mt-6 tracking-tight font-light lg:text-6xl text-white text-balance">
            How {frontmatter.customer} uses Buio to power their newest projects.
          </h2>
        </div>
        <img
          class="mt-12 lg:mt-0 aspect-square object-cover rounded-3xl lg:rounded-[3rem]"
          src="https://images.unsplash.com/photo-1527150122806-f682d2fd8b09?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2831&q=80"
          alt="#"
        />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-24 mt-24">
        <div class="hidden md:block">
          <div class="lg:sticker lg:sticky top-0 pt-12">
            <img
              src={frontmatter.logo.url}
              alt={frontmatter.logo.alt}
            />
            <div class="mt-6 space-y-6">
              <div>
                <p class="text-base font-medium leading-6 text-white">About</p>
                <p class="text-zinc-400 text-sm">
                  Airbnb is a popular online marketplace for short-term
                  accommodations worldwide.
                </p>
              </div>
              {
                Object.entries(frontmatter.details).map(([key, value]) => (
                  <div>
                    <p class="text-base font-medium leading-6 text-white">
                      {key}
                    </p>
                    <p class="text-zinc-400 text-sm">{value}</p>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
        <div class="md:col-span-3 lg:pt-12">
          <dl
            class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:space-y-0 lg:gap-24">
            {
              frontmatter.challengesAndSolutions.map((item) => (
                <div>
                  <dt class="inline-flex items-center gap-3">
                    <p class="text-3xl tracking-tighter font-light lg:text-4xl text-white">
                      {item.title}
                    </p>
                  </dt>
                  <dd class="mt-4 text-sm text-zinc-400">{item.content}</dd>
                </div>
              ))
            }
          </dl>
          <div class="mt-24">
            <span
              class="text-3xl tracking-tighter font-light lg:text-4xl text-white"
              >Results</span
            >
          </div>
          <ul
            role="list"
            class="grid grid-cols-1 gap-2 sm:grid-cols-2 lg:grid-cols-3 mt-12">
            {
              frontmatter.results.map((result) => (
                <li class="bg-ebony shadow-inset rounded-3xl p-4">
                  <figure class="flex flex-col justify-between h-full">
                    <div>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="icon icon-tabler icon-tabler-circle-check text-white"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round">
                        <path
                          stroke="none"
                          d="M0 0h24v24H0z"
                          fill="none"
                        />
                        <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
                        <path d="M9 12l2 2l4 -4" />
                      </svg>
                      <p class="text-sm text-zinc-400 mt-24">{result}</p>
                    </div>
                  </figure>
                </li>
              ))
            }
          </ul>

          <div class="prose-styles">
            <slot />
          </div>
        </div>
      </div>
    </div>
  </section>
  <CtaOne />
</BaseLayout>
