---
import LightLayout from "./LightLayout.astro";
const { frontmatter } = Astro.props;
---

<LightLayout>
  <section class="lg:p-8 bg-white">
    <div
      class="px-8 py-12 lg:py-32 mx-auto md:px-12 lg:px-16 xl:px-36 2xl:max-w-7xl">
      <div class="prose-styles ">
          <h2
            class="text-3xl mt-6 tracking-tight font-light lg:text-4xl text-black">
            {frontmatter.page}
          </h2>
        <p>{frontmatter.description}</p>
        <slot />
      </div>
    </div>
  </section>
</LightLayout>
