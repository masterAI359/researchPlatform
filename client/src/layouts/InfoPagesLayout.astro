---
import LightLayout from "./LightLayout.astro";
const { frontmatter } = Astro.props;
---

<LightLayout>
  <section class="lg:p-8 bg-white">
    <div
      class="px-8 py-12 lg:py-32 mx-auto md:px-12 lg:px-16 xl:px-36 2xl:max-w-7xl">
      <div class="max-w-2xl mx-auto">
        <span class="text-blue-400"
          >Last updated {frontmatter.pubDate.toString().slice(8, 15)}</span
        >
        <h1
          class="text-3xl tracking-tight mt-6 font-light lg:text-4xl text-black">
          {frontmatter.page}
        </h1>
      </div>
      <div class="prose-styles mt-12">
        <slot />
      </div>
    </div>
  </section>
</LightLayout>
