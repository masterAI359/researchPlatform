---
import { getCollection } from "astro:content";
const allPosts = await getCollection("changelog");
import LightLayout from "@/layouts/LightLayout.astro";
import Entries from "@/components/changelog/Entries.astro";
---

<LightLayout>
  <section class="lg:p-8 bg-white">
    <div
      class="px-8 py-12 lg:py-32 mx-auto md:px-12 lg:px-16 xl:px-36 2xl:max-w-7xl">
      <div class="relative text-center">
        <span class="text-black"> Changelog </span>
        <h2
          class="text-3xl mt-6 tracking-tight font-light lg:text-4xl text-black">
          Follow our journey <span class="block text-zinc-400"
            >and keep track of us.</span
          >
        </h2>
      </div>
      <div class="mx-auto max-w-2xl mt-12">
        {
          allPosts.slice().map((post) => (
            <Entries
              url={"/changelog/" + post.slug}
              page={post.data.page}
              description={post.data.description}
              alt={post.data.page}
              pubDate={post.data.pubDate.toString().slice(4, 15)}
              image={post.data.image.url}
            />
          ))
        }
      </div>
    </div>
  </section>
</LightLayout>
