{
  "compilerOptions": {
    "types": [
      "astro/client"
    ],
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "allowJs": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
  }
}