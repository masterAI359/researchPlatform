{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "endpoints/**/*",
        "envConfig/**/*",
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}