{
	"compilerOptions": {
		"module": "ES2022",
		"esModuleInterop": true,
		"target": "ES2022",
		"moduleResolution": "node10",
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"sourceMap": true,
		"rootDir": "./",
		"outDir": "./dist",
		"strict": true,
	},
	"lib": [
		"es2015"
	],
	"include": [
		"src/",
		"helpers/",
		"endpoints/",
		"src/Config.ts"
	],
	"exclude": [
		"node_modules"
	]
}