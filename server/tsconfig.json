{
	"compilerOptions": {
		"module": "ES2022",
		"esModuleInterop": true,
		"target": "ES2022",
		"moduleResolution": "node10",
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"sourceMap": true,
		"rootDir": "./",
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true
	},
	"lib": [
		"es2022",
		"DOM"
	],
	"include": [
		"src/",
		"helpers/",
		"endpoints/",
		"services/",
		"scripts/generateLogoMap.ts",
		"src/Config.ts",
	],
	"exclude": [
		"node_modules"
	]
}